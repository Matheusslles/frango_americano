<STYLE>*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
#modal {
display: none;
position: fixed;
top: 0;
left: 0;
width: 50%;
max-width: 800px;
margin-left: 25%;
margin-top: 15%;
text-align: center;
background-color:rgba(0, 0, 0, 0.726);
border-radius: 50px;
z-index: 100;
align-items: center;
justify-content: center;
flex-direction: column;
color: white;
font-size: 20px;
}

#modal h2 {
margin-top: 0;
}

#modal p {
margin: 0 0 10px 0;
}

#modal label {
display: block;
margin-bottom: 10px;
}

#modal input[type="number"] {
display: block;
width: 20%;
margin-bottom: 20px;
}

#modal button {
margin-top: 10px;
font-family: 'Oswald', sans-serif;
font-weight: bold; 
}

#fechar-modal {
margin-top: 20px;
}
#loader {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  z-index: 999;
}
body{
  background: linear-gradient(to bottom, hwb(0 95% 5% / 0.973),  #cde1f8);
/* background-image: url("/assets/FUNDO_americanooo.jpg");
  background-position: center;
  background-size: cover; */
}
.spinner {
  border: 16px solid #f3f3f3;
  border-top: 16px solid #f71111d3;
  border-radius: 50%;
  width: 120px;
  height: 120px;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

#content {
  display: none;
}
.products{
display: flex;
flex-wrap: wrap;
max-height: 500px;
overflow-y: scroll;
padding: 10px;
width: 100%;
}
.center{
display: flex;
flex-wrap: wrap;
max-width: 1280px;
margin: 0 auto;
padding: 0 2%;
}
html,body{
height: 100%;
overflow-y: hidden;
overflow-x: hidden;
}
header{
height: 125px;
padding: 20px ;
background: linear-gradient(to bottom, hwb(0 95% 5% / 0.973),  #7db5f5);
}
.logo{
width: 50%;
border-radius: 50px;
}
.menu{
padding-top: 30px;
width: 50%;
text-align: right;   
}
.menu a{
color:rgba(2, 0, 0, 0.966);
text-decoration: none;
margin-right: 15px;
font-family: 'Oswald', sans-serif;
font-size: 20px;
font-weight: 100;
/* background-color: rgba(25, 108, 231, 0.562); */
border-radius: 20px;
padding: 10px;
font-weight: bold;
}
.menu :hover{
text-decoration: underline;
color: rgb(8, 0, 0);
  
}
img{
border-radius: 10px;
}
.product{
display: flex;
flex-direction: column;
align-items: center;
margin: 30px;
padding: 50px;
margin-left: 500px;
background: linear-gradient(to bottom, #f7f3f3,  #ee1212);
border-radius: 50px;
font-family: 'Oswald', sans-serif;
font-size: 18px;
font-weight: bold; 

}

.product img {
width: 200px;
height: 35 px;
margin-bottom: 40px;
overflow: hidden;
position: relative;
}
img {
transition: transform 0.3s ease-in-out;
}

img:hover {
